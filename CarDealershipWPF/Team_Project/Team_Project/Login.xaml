<Window x:Class="Team_Project.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Team_Project"
        mc:Ignorable="d"
        Title="(Company Name)" Height="350" Width="525"  >
    <Grid>
        <Label Content="Employee ID:" FontSize="14" HorizontalAlignment="Left" Margin="107,114,0,0" VerticalAlignment="Top" Width="94"/>
        <TextBox PreviewTextInput="tbEmployeeId_PreviewTextInput" Name="tbEmployeeId" HorizontalAlignment="Left" Height="29" Margin="221,114,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="172"/>
        <Label Content="Password:" FontSize="14" HorizontalAlignment="Left" Margin="107,158,0,0" VerticalAlignment="Top" Width="94"/>
        <PasswordBox Name="pbPassword" HorizontalAlignment="Left" Margin="221,158,0,0" VerticalAlignment="Top" Width="172" Height="29"/>
        <Button Click="btnLogin_Click" Content="Login" Name="btnLogin" HorizontalAlignment="Left" Margin="318,201,0,0" VerticalAlignment="Top" Width="75" Height="22"/>
        <Button Click="btnAddNewEmployee_Click" Name="btnAddNewEmployee" Content="Add a new employee" HorizontalAlignment="Left" Margin="363,23,0,0" VerticalAlignment="Top" Width="133" Height="22"/>

    </Grid>
</Window>
